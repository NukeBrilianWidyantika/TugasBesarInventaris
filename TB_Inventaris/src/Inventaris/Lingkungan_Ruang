    private void btnsimpanActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String lantai = "";
        String dinding = "";
	String atap = "";
	String pintu = "";
	String jendela = "";
	String kaca = "";
        
        if(cbbersih1.isSelected())
            lantai += "Bersih";
        if(cbbersih2.isSelected())
            dinding += "Bersih";
        if(cbbersih3.isSelected())
            atap += "Bersih";
        if(cbbersih4.isSelected())
            pintu += "Bersih";
        if(cbbersih5.isSelected())
            jendela += "Bersih";
        if(cbbersih5.isSelected())
            kaca += "Bersih";
        
        if(cbkotor1.isSelected())
            lantai += "Kotor";
        if(cbkotor2.isSelected())
            dinding += "Kotor";
        if(cbkotor3.isSelected())
            atap += "Kotor";
        if(cbkotor4.isSelected())
            pintu += "Kotor";
        if(cbkotor5.isSelected())
            jendela += "Kotor";
        if(cbkotor5.isSelected())
            kaca += "Kotor";
        
        try{
            Class.forName("com.mysql.jdbc.Driver");
            Connection connection = DriverManager.getConnection("jdbc:mysql://localhost/inventaris_kampus", "root", "");
            Statement statement = connection.createStatement();
            String sql = "insert into lingkungan_ruang "
                    + "values ('"+lantai+"','"+dinding+"','"+atap+"','"+pintu+"','"+jendela+"','"+kaca+"')";
            statement.executeUpdate(sql);
            statement.close();
            
            JOptionPane.showMessageDialog(null, "data tersimpan");
        }catch (Exception e){
            JOptionPane.showMessageDialog(null, "Ada kesalahan"+e);
        }
    }                                         

